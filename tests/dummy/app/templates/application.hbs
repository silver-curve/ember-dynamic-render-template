<p>
  <label for="template-string">Literal value</label>
  <div>
    <textarea id="template-string" 
      {{on "input" (mut this.templateString) value="target.value"}}
    ></textarea>
    <RenderTemplate @templateString={{this.templateString}}/>
  </div>
</p>

<p>
  <label for="hash-property">Hash property</label>
  <div>
    <textarea id="hash-property" 
      {{on "input" (mut this.propA) value="target.value"}}
    ></textarea>
    <RenderTemplate @templateString="\{\{a\}\}" @props={{hash a=this.propA}}/>
  </div>
</p>
